{% extends 'base.html.twig' %}

{% block title %}Job{% endblock %}

{% block body %}
    <h1>Job</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Site</th>
                <td>{{ job.site }}</td>
            </tr>
            <tr>
                <th>Date_started</th>
                <td>{{ job.dateStarted ? job.dateStarted|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_finished</th>
                <td>{{ job.dateFinished ? job.dateFinished|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ job.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('job_index') }}">back to list</a>

    <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>

    {{ include('job/_delete_form.html.twig') }}
{% endblock %}
